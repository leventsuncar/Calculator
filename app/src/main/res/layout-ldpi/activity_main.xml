<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextConclusion"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:autofillHints=""
        android:background="@color/editBackground"
        android:baselineAligned="false"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="150dp"
        android:paddingRight="10dp"
        android:text="@string/plaint_text_field"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_AC"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@color/buttonBg"
                android:drawableTintMode="src_over"
                android:onClick="allClear"
                android:text="@string/first_btn1"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_positiveNegative"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/first_btn2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_percent"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:text="@string/first_btn3"
                android:textSize="24sp" />
            <!--            android:onClick="percent"-->
            <Button
                android:id="@+id/button_division"
                style="@style/Widget.AppCompat.Button"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="btnMathOperation"
                android:text="@string/first_btn4"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_7"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/second_btn1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_8"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/second_btn2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_9"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/second_btn3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_X"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="btnMathOperation"
                android:text="@string/second_btn4"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_4"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/third_btn1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/third_btn2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_6"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/third_btn3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_minus"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="btnMathOperation"
                android:text="@string/third_btn4"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/fourth_btn1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/fourth_btn2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_3"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/fourth_btn3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_plus"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="btnMathOperation"
                android:text="@string/fourth_btn4"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/fifth_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_0"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="add"
                android:drawableTintMode="src_over"
                android:onClick="textClick"
                android:text="@string/fifth_btn1"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_comma"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/fifth_btn2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_dot"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="textClick"
                android:text="@string/fifth_btn3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_equals"
                style="@style/Widget.AppCompat.Button"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:backgroundTintMode="screen"
                android:onClick="equals"
                android:text="@string/fifth_btn4"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>